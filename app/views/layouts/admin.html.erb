<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Simple CMS | <%= @page_title || 'Admin Area' %></title>
	<%= stylesheet_link_tag('public', 'admin', media: 'all') %>
	<%= javascript_include_tag('application') %>
</head>
<body>
	<div id="header">
		<h1>Simple CMS Admin</h1>
	</div>
	
	<div class="main">
		<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div id="content">
			<%= yield %>
		</div>
	</div>
	
	<div id="footer">
		<p id="copyright">&copy; lynda.com / Jimi Odeyemi</p>
	</div>
</body>
</html>